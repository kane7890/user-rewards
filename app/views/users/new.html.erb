<%#= render 'form', user: @user %>
<%# check for errors in the @user object %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:
    </h2>
    <ul>
  <%# list the error messages %>
      <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
      <% end %>
      </ul>
      </div>
  <% end %>

<%#--form for entering user information for a new user %>
<%= form_for :user, url: '/users' do |f| %>
  Username: <%= f.text_field :name %><br>
  City: <%= f.text_field :city %><br>
  State: <%= f.text_field :state %> <br>
  Password: <%= f.password_field :password %><br>
  Password Confirmation: <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Submit" %>
<% end %>
